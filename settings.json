{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.unity3d.com)",
      "WebFetch(domain:forum.unity.com)",
      "WebSearch(*)",
      "mcp__gitmcp-UnityCsReference",
      "mcp__gitmcp-uGUI",
      "mcp__gitmcp-NewInputSystem",
      "mcp__UnityNaturalMCP",
      "mcp__jetbrains",
      "mcp__ide__getDiagnostics",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(git:log,status,diff,branch)",
      "Bash(mvn:clean,compile,test)",
      "Bash(npm:list,outdated)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(npm:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git commit --amend:*)",
      "Bash(git push -f:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(!**/*monkey*)",
      "Read(node_modules/**",
      "Read(./Library/**)",
      "Read(!./Library/PackageCache/**)",
      "Edit(./Packages/packages-lock.json)",
      "Write(.env*)",
      "Write(**/secrets/**)"
    ],
    "additionalDirectories": [
    ],
    "defaultMode": "plan"
  },
  "enabledMcpjsonServers": [
    "context7",
    "gitmcp-UnityCsReference",
    "gitmcp-uGUI",
    "gitmcp-NewInputSystem",
    "UnityNaturalMCP",
    "jetbrains"
  ],
  "env": {
    "MCP_TIMEOUT": "5000",
    "MCP_TOOL_TIMEOUT": "180000"
  }
}